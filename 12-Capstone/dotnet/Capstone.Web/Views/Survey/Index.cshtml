@model SurveyModel
@{
    ViewData["Title"] = "Survey";
}

<h2>Survey</h2>

<div id="surveySection">
    <form class="form-group" asp-controller="Survey" asp-action="SubmitSurvey" method="post">
        <div class="form-group">
            <label asp-for=ParkCode></label>
            <select class="form-control" asp-for="ParkCode" asp-items="SurveyModel.ParkNamesByCode"></select>
            <span asp-validation-for="ParkCode"></span>
            <br />

            <label asp-for="EmailAddress"></label>
            <input class="form-control" type="email" asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress"></span>
            <br />
            <label asp-for="State"></label>
            <select class="form-control" asp-for="State" asp-items="SurveyModel.States"></select>
            <span asp-validation-for="State"></span>
            <br />
        </div>
        <div class="form-group-sm">
            <label asp-for="ActivityLevel"></label>
            <br />
            <input asp-for="ActivityLevel" type="radio" name="ActivityLevel" value="Inactive" />Total Couch Potato
            <br />
            <input asp-for="ActivityLevel" type="radio" name="ActivityLevel" value="Sedentary" />I Avoid An Elevated Heart Rate
            <br />
            <input asp-for="ActivityLevel" type="radio" name="ActivityLevel" value="Active" />I Own A Gym Membership
            <br />
            <input asp-for="ActivityLevel" type="radio" name="ActivityLevel" value="EXTREMELY ACTIVE!!" />I Do Triathlons
            <br />
        </div>
        <span asp-validation-for="ActivityLevel"></span>

        <input class="btn btn-default" type="submit" value="Submit" />

    </form>
</div>